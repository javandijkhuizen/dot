# add ~/$HOME/bin to $PATH
export PATH=$PATH:$HOME/bin

# general settings
export TERMINAL="st"
export EDITOR="vim"

# set display mode
xrandr --output Virtual-1 --mode 1600x900

# set wallpaper
$HOME/bin/setbg &

# composit manager
xcompmgr -F &

# simple X hotkey daemon
pgrep -x sxhkd > /dev/null || sxhkd &
